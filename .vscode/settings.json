{
    "editor.fontSize": 14,
    "latex-workshop.view.pdf.zoom": "page-fit",
    "latex-workshop.texcount.interval": 2000,
    "latex-workshop.latex.autoClean.run": "onBuilt",
    "latex-workshop.latex.clean.subfolder.enabled": true,
    "latex-workshop.latex.clean.fileTypes":[
        "*.aux", 
        "*.bbl", "*.blg", 
        "*.idx", "*.ind", 
        "*.lof", "*.lot", 
        "*.out", 
        "*.toc", 
        "*.acn", "*.acr", "*.alg", "*.glg", 
        "*.glo", "*.gls", 
        "*.fls", 
        "*.log", 
        "*.fdb_latexmk", 
        "*.snm", 
        "*.synctex(busy)", 
        "*.synctex.gz(busy)", 
        "*.synctex.gz",
        "*.tkzfonct.gnuplot",
        "*.tkzfonct.table",
        "*.nav"
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-shell-escape",
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "latexmk-STUDENT",
            "command": "latexmk",
            "args": [
                "-shell-escape",
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "-auxdir=%DIR%",
                "-outdir=%DIR%",
                "%DOC%"
            ],
            "env": {"STUDENTorTEACHER" : "STUDENT"}
        },
        {
            "name": "latexmk-TEACHER",
            "command": "latexmk",
            "args": [
                "-shell-escape",
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "-auxdir=%DIR%",
                "-outdir=%DIR%",
                "-jobname=%A-TEACHER",
                "%DOC%"
            ],
            "env": {"STUDENTorTEACHER" : "TEACHER"}
        },
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "-shell-escape",
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "add-honors-prefix",
            "command": "add-honors-prefix",
            "args": [],
            "env": {}
        },
        {
            "name": "delete-Notes-PDFs",
            "command": "rm",
            "args": [
                "%DOCFILE%.pdf", 
                "%DOCFILE%-TEACHER.pdf", 
                "H-%DOCFILE%.pdf",
                "H-%DOCFILE%-TEACHER.pdf",
            ],
            "env": {}
        },
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "latexmk-BOTH ðŸ”ƒ",
            "tools": [
                "latexmk-TEACHER",
                "latexmk-STUDENT",
                "add-honors-prefix",
            ]
        },
        {
            "name": "latexmk-STUDENT",
            "tools": [
                "latexmk-STUDENT"
            ]
        },
        {
            "name": "latexmk-TEACHER",
            "tools": [
                "latexmk-TEACHER"
            ]
        },
        {
            "name": "add-honors-prefix ðŸ”ƒ",
            "tools": [
                "add-honors-prefix"
            ]
        },
        {
            "name": "delete-Notes-PDFs ðŸ”ƒ",
            "tools": [
                "delete-Notes-PDFs"
            ]
        },
    ],
    "git.autofetch": true,
    "git.closeDiffOnOperation": true,
    "git.enableStatusBarSync": true
}